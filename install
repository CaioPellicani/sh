#!/bin/bash

./firefoxRemove
./atualizar
./numlockxInstall
./msfontsInstall
./braveInstall
./chromeInstall

for arg in $@
do 
    case $arg in 
	    "dev")
            echo "Modo Dev"
		    ./codeInstall
			./arduinoInstall
		    ;;
	    "r")
		    echo "Modo R"
           ./rInstall
		    ;;
		*)
			echo "Comando $arg n√£o encontrado"
    esac
done

sudo apt autoclean
sudo apt autoremove

echo "Deseja reiniciar?(S/N)"
read result

if [ "${result^^}" == "S" ]
then
	shutdown -r now
fi
